<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <RelativeLayout
        android:id="@+id/activity_mailnew_rl_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="#d9eaf6" >

        <Button
            android:id="@+id/activity_mailnew_btn_back"
            android:layout_width="70dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/header_btn_back" />

        <TextView
            android:id="@+id/activity_mailnew_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/header_title_mail_new"
            android:textColor="@color/text_blue"
            android:textSize="20sp" />

        <Button
            android:id="@+id/activity_mailnew_btn_send"
            android:layout_width="70dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/header_btn_send" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/activity_mailnew_rl_title"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingTop="30dp" >

        <EditText
            android:id="@+id/receiver"
            style="@style/text_style_wfill"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/add"
            android:ellipsize="end"
            android:hint="接收者"
            android:singleLine="true" />

        <Button
            android:id="@+id/add"
            style="@style/text_style"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_input_add" />
    </LinearLayout>

</RelativeLayout>